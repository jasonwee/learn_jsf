<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">
	<managed-bean>
		<managed-bean-name>helloBean</managed-bean-name>
		<managed-bean-class>org.just4fun.test.HelloBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

    <managed-bean>
        <managed-bean-name>userDatas</managed-bean-name>
        <managed-bean-class>org.just4fun.test.UserDatas</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>userData</managed-bean-name>
        <managed-bean-class>org.just4fun.test.UserData</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>paramData</managed-bean-name>
        <managed-bean-class>org.just4fun.test.ParamData</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>attributeData</managed-bean-name>
        <managed-bean-class>org.just4fun.test.AttributeData</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>propertyData</managed-bean-name>
        <managed-bean-class>org.just4fun.test.PropertyData</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>dateTime</managed-bean-name>
        <managed-bean-class>org.just4fun.test.DateTime</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>userUrlData</managed-bean-name>
        <managed-bean-class>org.just4fun.test.UserUrlData</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>userNameData</managed-bean-name>
        <managed-bean-class>org.just4fun.test.UserNameData</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>employeeData</managed-bean-name>
        <managed-bean-class>org.just4fun.test.EmployeeData</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>employeeAData</managed-bean-name>
        <managed-bean-class>org.just4fun.test.EmployeeAData</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>compositeComponent</managed-bean-name>
        <managed-bean-class>org.just4fun.test.CompositeComponent</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>userHandlerData</managed-bean-name>
        <managed-bean-class>org.just4fun.test.UserHandlerData</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>userActionData</managed-bean-name>
        <managed-bean-class>org.just4fun.test.UserActionData</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>userSystemEventData</managed-bean-name>
        <managed-bean-class>org.just4fun.test.UserSystemEventData</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>userDatabaseData</managed-bean-name>
        <managed-bean-class>org.just4fun.test.UserDatabaseData</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>userExpLangData</managed-bean-name>
        <managed-bean-class>org.just4fun.test.UserExpLangData</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>userLangData</managed-bean-name>
        <managed-bean-class>org.just4fun.test.UserLangData</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <converter>
    <converter-id>urlConverter</converter-id>
    <converter-class>org.just4fun.test.UrlConverter</converter-class>
    </converter>
    
    <validator>
    <validator-id>urlValidator</validator-id>
    <validator-class>org.just4fun.test.UrlValidator</validator-class>
    </validator>

    <managed-bean>
        <managed-bean-name>helloWorld</managed-bean-name>
        <managed-bean-class>org.just4fun.test.HelloWorld</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>messageBean</property-name>
            <property-class>org.just4fun.test.MessageBean</property-class>
            <value>#{message}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>navigationController</managed-bean-name>
        <managed-bean-class>org.just4fun.test.NavigationController</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>pageId</property-name>
            <property-class>java.lang.String</property-class>
            <value>#{param.pageId}</value>
        </managed-property>
    </managed-bean>

    <navigation-rule>
      <from-view-id>navigation.xhtml</from-view-id>
      <navigation-case>
         <from-action>#{navigationController.processPage1}</from-action>
         <from-outcome>page</from-outcome>
         <to-view-id>page1.jsf</to-view-id>
      </navigation-case>
      <navigation-case>
         <from-action>#{navigationController.processPage2}</from-action>
         <from-outcome>page</from-outcome>
         <to-view-id>page2.jsf</to-view-id>
      </navigation-case>
   </navigation-rule>
   
   <application>
   
   <locale-config>
      <default-locale>en</default-locale>
      <supported-locale>fr</supported-locale>
   </locale-config>
   
   <resource-bundle>
      <base-name>org.just4fun.messages</base-name>
      <var>msg</var>
   </resource-bundle>
   
         <!-- Application Startup -->
      <system-event-listener>
         <system-event-listener-class>
            org.just4fun.test.CustomSystemEventListener
         </system-event-listener-class>
         <system-event-class>
            javax.faces.event.PostConstructApplicationEvent
         </system-event-class>                      
      </system-event-listener> 
      
      <!-- Before Application is to shut down -->
      <system-event-listener>
         <system-event-listener-class>
            org.just4fun.test.CustomSystemEventListener
         </system-event-listener-class>
         <system-event-class>
            javax.faces.event.PreDestroyApplicationEvent
         </system-event-class>                      
      </system-event-listener>
   </application>
</faces-config>
